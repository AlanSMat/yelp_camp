<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Edit <%=campground.name%></h1><br />
    <div class="row">
        <div class="col-sm">
            <form method="post" action="/campgrounds/<%=campground._id%>?_method=PUT">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" />
                </div>
                <div class="form-group">
                    <label for="thumb_image">Thumb Image</label>
                    <input class="form-control" size="30" type="text" name="campground[thumb_image]" value="<%=campground.thumb_image %>" />
                </div>
                <div class="form-group">
                    <label for="main_image">Main Image</label>
                    <input class="form-control" type="text" name="campground[main_image]" value="<%=campground.main_image %>" />
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="campground[price]" value="<%=campground.price %>" min="0.01" step="0.01" />
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" value="<%=campground.location %>" />
                </div>
                <!--<div class="form-group">
                    <label for="physical_address">Physical Address</label>
                    <input class="form-control" type="text" name="campground[physical_address]" value="<%=campground.physical_address %>" />
                </div>-->
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" rows="5" name="campground[desc]"><%=campground.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-default btn-block" type="submit" />
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>