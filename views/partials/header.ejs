<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script type="text/javascript" src="/scripts/test.js"></script>
    <title>Yelp Camp</title>
  </head>
  <body>
    <% 
    var nav = [
            //{navTitle: "Home",  link: "/",  description: "This is the home page"},
            {navTitle: "Campgrounds",  link: "/campgrounds",  description: "This is the Show page"}, 
            {navTitle: "About", link: "/about", description: "This is the About page"} 
        ] 
    %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/campgrounds" />YelpCamp</a>  
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if(!currentUser) { %>
              <li class=""><a href="/login">Login</a></a></li>
              <li class=""><a href="/register">Sign Up</a></a></li>
            <% } else { %> 
              <li class=""><a href="">Signed in as <strong><%= currentUser.username %></strong></a></li>
              <li class=""><a href="/logout">Logout</a></a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="container">
      <% if(error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      <% if(success && success.length > 0) { %>
        <div class="alert alert-success" role="alert">
          <%= success %>
        </div>
      <% } %>
    </div>
    <!--<div class="alert alert-success" role="alert"></div>
    <div class="alert alert-danger" role="alert"></div>-->
    