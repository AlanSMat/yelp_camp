<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Add New Comment <%= campground.name %></h1><br />
    <div class="row">
        <div style="width: 30%; margin:auto">
            <form method="post" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" />
                </div>
                <!--<div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author" />
                </div>-->
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-default btn-block" type="submit" />
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>