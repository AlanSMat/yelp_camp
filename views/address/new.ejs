<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center;">Add New Address <%= campground.name %></h1><br />
    <div class="row">
        <div style="width: 30%; margin:auto">
            <form method="post" action="/campgrounds/<%= campground._id %>/address">
                <div class="form-group">
                    <label for="address[street_address]">Street Address</label>
                    <input class="form-control" type="text" name="address[street_address]" placeholder="Street Address" />
                </div>
                <div class="form-group">
                    <label for="address[city]">City</label>
                    <input class="form-control" type="text" name="address[city]" placeholder="City" />
                </div>
                <div class="form-group">
                    <label for="address[suburb]">Suburb</label>
                    <input class="form-control" type="text" name="address[suburb]" placeholder="Suburb" />
                </div>
                <div class="form-group">
                    <label for="address[postcode]">Post Code</label>
                    <input class="form-control" type="text" name="address[postcode]" placeholder="Post Code" />
                </div>
                <div class="form-group">
                    <label for="address[country]">Country</label>
                    <input class="form-control" type="text" name="address[country]" placeholder="Country" />
                </div>                
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-default btn-block" type="submit" />
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>